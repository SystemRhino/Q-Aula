<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#280F77"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal"/>
			<LinearLayout
				android:id="@+id/linear_card"
				android:layout_width="350dp"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/linear8"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/text_date"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Data"
						android:textSize="16sp"
						android:textStyle="bold|italic"
						android:textColor="#280F77"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear_card_dentro"
					android:layout_width="350dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Agora é aula de"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#8C5289"/>
					<TextView
						android:id="@+id/text_aula"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#000000"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear6"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Próxima aula é de"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#8C5289"/>
					<TextView
						android:id="@+id/text_prox_aula"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#000000"/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear_menu_down"
				android:layout_width="350dp"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="vertical">
				<RadioButton
					android:id="@+id/radio_segunda"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Segunda"
					android:textSize="12sp"
					android:textColor="#000000"/>
				<RadioButton
					android:id="@+id/radio_terca"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Terça"
					android:textSize="12sp"
					android:textColor="#000000"/>
				<RadioButton
					android:id="@+id/radio_quarta"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Quarta"
					android:textSize="12sp"
					android:textColor="#000000"/>
				<RadioButton
					android:id="@+id/radio_quinta"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Quinta"
					android:textSize="12sp"
					android:textColor="#000000"/>
				<RadioButton
					android:id="@+id/radio_sexta"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Sexta"
					android:textSize="12sp"
					android:textColor="#000000"/>
			</LinearLayout>
			<ImageView
				android:id="@+id/b_down"
				android:layout_width="350dp"
				android:layout_height="35dp"
				android:padding="8dp"
				android:src="@drawable/seta_baixo_png"
				android:scaleType="centerInside"/>
		</LinearLayout>
		<ScrollView
			android:id="@+id/linear_drop"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<LinearLayout
				android:id="@+id/linear10"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/linear_block"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/linear19"
						android:layout_width="wrap_content"
						android:layout_height="45dp"
						android:padding="8dp"
						android:orientation="vertical"/>
					<LinearLayout
						android:id="@+id/user_box"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:orientation="horizontal">
						<LinearLayout
							android:id="@+id/linear26"
							android:layout_width="15dp"
							android:layout_height="match_parent"
							android:padding="8dp"
							android:background="#8C5289"
							android:orientation="vertical"/>
						<TextView
							android:id="@+id/text_materia"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:text="MATÉRIA"
							android:textSize="30sp"
							android:textStyle="bold"
							android:textColor="#000000"/>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear20"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="20dp"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/linear24"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">
							<ImageView
								android:id="@+id/imageview5"
								android:layout_width="35dp"
								android:layout_height="35dp"
								android:src="@drawable/ic_account_circle_black"
								android:scaleType="center"/>
							<TextView
								android:id="@+id/text_prof_1"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="8dp"
								android:text="Professor"
								android:textSize="16sp"
								android:textStyle="bold"
								android:textColor="#8C5289"/>
						</LinearLayout>
						<LinearLayout
							android:id="@+id/linear25"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">
							<ImageView
								android:id="@+id/imageview6"
								android:layout_width="35dp"
								android:layout_height="35dp"
								android:src="@drawable/ic_account_circle_black"
								android:scaleType="center"/>
							<TextView
								android:id="@+id/text_prof_2"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="8dp"
								android:text="Professor"
								android:textSize="16sp"
								android:textStyle="bold"
								android:textColor="#8C5289"/>
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear22"
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:padding="8dp"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/line"
							android:layout_width="match_parent"
							android:layout_height="1dp"
							android:padding="8dp"
							android:background="#9E9E9E"
							android:orientation="horizontal"/>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear21"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview2"
							android:layout_width="35dp"
							android:layout_height="35dp"
							android:src="@drawable/ic_alarm_black"
							android:scaleType="center"/>
						<TextView
							android:id="@+id/text_horario"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Início"
							android:textSize="16sp"
							android:textStyle="bold"
							android:textColor="#8C5289"/>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear23"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview3"
							android:layout_width="35dp"
							android:layout_height="35dp"
							android:src="@drawable/ic_alarm_off_black"
							android:scaleType="center"/>
						<TextView
							android:id="@+id/text_horario_fim"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Fim"
							android:textSize="16sp"
							android:textStyle="bold"
							android:textColor="#8C5289"/>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear27"
					android:layout_width="wrap_content"
					android:layout_height="30dp"
					android:padding="8dp"
					android:orientation="vertical"/>
				<LinearLayout
					android:id="@+id/linear28"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/linear29"
						android:layout_width="15dp"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:background="#8C5289"
						android:orientation="vertical"/>
					<TextView
						android:id="@+id/textview4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:text="ANOTAÇÕES"
						android:textSize="30sp"
						android:textStyle="bold"
						android:textColor="#000000"/>
					<ImageView
						android:id="@+id/img_add"
						android:layout_width="35dp"
						android:layout_height="match_parent"
						android:layout_marginLeft="35dp"
						android:src="@drawable/ic_add_circle_black"
						android:scaleType="center"/>
					<ImageView
						android:id="@+id/img_delete_all"
						android:layout_width="35dp"
						android:layout_height="match_parent"
						android:layout_marginLeft="35dp"
						android:src="@drawable/ic_delete_black"
						android:scaleType="center"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear30"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"/>
				<ListView
					android:id="@+id/listview2"
					android:layout_width="match_parent"
					android:layout_height="250dp"
					android:padding="5dp"
					android:choiceMode="none"/>
				<LinearLayout
					android:id="@+id/linear32"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="vertical"/>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>
